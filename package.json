{
	"name": "argentina-community",
	"type": "module",
	"private": true,
	"version": "1.0.0",
	"scripts": {
		"start": "nest start --path ./tsconfig.build.json",
		"dev": "NODE_ENV=development nest start --watch --path ./tsconfig.build.json",
		"debug": "nest start --debug --watch --path ./tsconfig.build.json",
		"build": "nest build --path ./tsconfig.build.json",
		"prod": "NODE_ENV=production node dist/src/main",
		"format": "prettier --write .",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
	},
	"dependencies": {
		"@nestjs/common": "^11.1.1",
		"@nestjs/core": "^11.1.1",
		"@nestjs/platform-express": "^11.1.1",
		"@ogma/common": "^1.2.0",
		"@ogma/nestjs-module": "^5.5.0",
		"@ogma/styler": "^1.1.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"discord.js": "catalog:discord",
		"globals": "^16.1.0",
		"necord": "catalog:discord",
		"reflect-metadata": "^0.2.2",
		"rxjs": "^7.8.2"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.9",
		"@eslint/js": "^9.27.0",
		"@nestjs/cli": "^11.0.7",
		"@nestjs/schematics": "^11.0.5",
		"@nestjs/testing": "^11.1.1",
		"@swc/cli": "^0.6.0",
		"@swc/core": "^1.11.24",
		"@types/express": "^5.0.3",
		"@types/node": "^24.0.3",
		"@types/supertest": "^6.0.3",
		"@typescript-eslint/parser": "^8.32.1",
		"eslint": "^9.27.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-import-resolver-typescript": "^4.3.5",
		"eslint-plugin-import-x": "^4.12.2",
		"eslint-plugin-svelte": "^3.8.1",
		"globals": "^16.1.0",
		"nest-typed-config": "^2.9.4",
		"prettier": "^3.5.3",
		"source-map-support": "^0.5.21",
		"supertest": "^7.1.1",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.32.1"
	},
	"imports": {
		"#root/*": {
			"types": "./src/*",
			"default": "./dist/src/*"
		},
		"#lib/*": {
			"types": "./src/lib/*",
			"default": "./dist/src/lib/*"
		},
		"#config/*": {
			"types": "./src/config/*",
			"default": "./dist/src/config/*"
		},
		"#app/*": {
			"types": "./src/app/*",
			"default": "./dist/src/app/*"
		},
		"#guards/*": {
			"types": "./src/app/api/gateway/guards/*",
			"default": "./dist/src/app/api/gateway/guards/*"
		},
		"#services/*": {
			"types": "./src/app/api/gateway/services/*",
			"default": "./dist/src/app/api/gateway/services/*"
		},
		"#controllers/*": {
			"types": "./src/app/api/gateway/controllers/*",
			"default": "./dist/src/app/api/gateway/controllers/*"
		},
		"#exception-filters/*": {
			"types": "./src/app/api/gateway/exception-filters/*",
			"default": "./dist/src/app/api/gateway/exception-filters/*"
		}
	},
	"packageManager": "pnpm@10.12.1",
	"engines": {
		"node": "23.0.0"
	}
}
