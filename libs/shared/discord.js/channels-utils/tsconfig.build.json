{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"baseUrl": ".",
		"emitDeclarationOnly": true
	},
	"include": ["src/**/*.ts", "../../../../types/**/*"],
	"exclude": [
		"node_modules",
		"test",
		"dist",
		"lib",
		"jest.config.ts",
		"tests/**/*.spec.ts",
		"tests/**/*.test.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.ts"
	]
}
